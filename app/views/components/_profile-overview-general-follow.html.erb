<%= link_to user_path(follow) do %>
  <%= image_tag(follow.avatar.url, class: "profile-overview__avatar") %>
  <p class="profile-overview__name text-center">salut
    <span><%= follow.display_name %></span>

    <button class="follow-circle follow-circle--add">
      <%= embedded_svg('icons/add.svg', class: 'follow-circle__icon') %>
      <%= embedded_svg('icons/checkbox.svg', class: 'follow-circle__icon') %>
    </button>
  </p>

  <p class="profile-overview__handle text-center">
    ~<%=follow.username %>
  </p>
<% end %>

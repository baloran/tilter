<section class="block main-block signin">
  <div class="main-block__title text-center">
    Sign in
    <span class="main-block__catchline">Login to start tilting</span>
  </div>

  <%= form_for(
    resource,
    as: resource_name,
    url: session_path(resource_name),
    html: { class: 'form' }
  ) do |f| %>
    <div class="form__row">
      <%= f.label :email, class: 'form__label' %>
      <%= f.email_field :email, autofocus: true, class: 'form__input' %>
    </div>

    <div class="form__row">
      <%= f.label :password, class: 'form__label' %>
      <%= f.password_field :password, autocomplete: 'off', class: 'form__input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form__row">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'form__label form__label--grey' %>
      </div>
    <% end %>

    <% flash.each do |name, message| %>
      <p class="form__error"><%= message %></p>
    <% end %>

    <%= f.submit 'Sign in', class: 'cta cta--fill cta--fixed' %>
  <% end %>

  <div class="main-block__disclaimer text-center">
    Don't have an account?
    <%= link_to 'Sign up', new_user_registration_path %>
  </div>
</section>

<section class="block main-block signup">
  <div class="main-block__title text-center">
    Sign up
    <span class="main-block__catchline">Create a new account and tilt</span>
  </div>

  <%= form_for(
    resource,
    as: resource_name,
    url: registration_path(resource_name),
    validate: true,
    html: { class: 'form' }
  ) do |f| %>
    <div class="form__row">
      <%= f.label :username, class: 'form__label' %>
      <%= f.text_field :username, autofocus: true, class: 'form__input' %>
    </div>

    <div class="form__row">
      <%= f.label :password, class: 'form__label' %>
      <%= f.password_field :password, autocomplete: 'off', class: 'form__input' %>
    </div>

    <div class="form__row">
      <%= f.label :email, class: 'form__label' %>
      <%= f.email_field :email, class: 'form__input' %>
    </div>

    <%= f.submit 'Sign up', class: 'cta cta--fill cta--fixed' %>
  <% end %>

  <div class="main-block__disclaimer text-center">
    Already have an account?
    <%= link_to 'Sign in', new_user_session_path %>
  </div>
</section>

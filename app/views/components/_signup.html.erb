<section class="block main-block signup">

  <div class="main-block__title text-center">
    Sign up <span class="main-block__catchline">Create a new account and tilt</span>
  </div>

  <form action="#" class="form">

    <div class="form__row">
      <label for="username" class="form__label">Username</label>
      <input type="text" id="username" class="form__input">
      <p class="form__error">Username already exists</p>
    </div>

    <div class="form__row">
      <label for="password" class="form__label">Password</label>
      <input type="password" id="password" class="form__input">
      <p class="form__error">Password needs to be at least 8 characters long</p>
    </div>

    <div class="form__row">
      <label for="email" class="form__label">Email</label>
      <input type="email" id="email" class="form__input">
      <p class="form__error">Email is invalid</p>
    </div>


    <input type="submit" value="Sign up" class="cta cta--fill cta--fixed">

  </form>

  <div class="main-block__disclaimer text-center">
    Already have an account? <a href="#">Sign in</a>
  </div>

</section>

<section class="tilt">
	<div class="tilt__account">
		<strong><%= tilt.user.display_name %></strong>
		<span>
      @<%= tilt.user.username %> â€¢
      <%= distance_of_time_in_words(tilt.created_at) %>
    </span>
	</div>

	<div class="tilt__content">
    <%= tilt.content %>
	</div>

  <!-- <div class="tilt__picture">
		<%# image_tag("dummy-1.png") %>
	</div> -->

	<div class="tilt__actions">
		<div class="tilt__action tilt__action--reply">
			<%= embedded_svg('icons/reply.svg') %>
			<span><%= number_to_human(tilt.children.count) %></span>
		</div>

		<div class="tilt__action tilt__action--active">
			<%= embedded_svg('icons/retilt.svg') %>
			<span><%= number_to_human(tilt.retweets.count) %></span>
		</div>

		<div class="tilt__action">
			<%= embedded_svg('icons/strike.svg') %>
			<span><%= number_to_human(tilt.likes.count) %></span>
		</div>

    <!-- <div class="tilt__action tilt__action--more ">
			<%# embedded_svg('icons/more.svg') %>
